<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.6/phpunit.xsd"
         bootstrap="tests/bootstrap.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         failOnWarning="false"
         failOnRisky="false">

    <testsuites>
        <testsuite name="All Tests">
            <directory>tests/active/</directory>
        </testsuite>
        <testsuite name="Active Tests">
            <directory>tests/active/</directory>
        </testsuite>
        <testsuite name="Pending Tests">
            <directory>tests/pending/</directory>
        </testsuite>
        <testsuite name="Archive Tests">
            <directory>tests/archive/</directory>
        </testsuite>
    </testsuites>

    <php>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
    </php>

    <coverage>
        <include>
            <directory>../localize-debug-log/</directory>
        </include>
        <report>
            <html outputDirectory="tests/logs/coverage"/>
        </report>
    </coverage>

    <logging>
        <testdoxText outputFile="tests/logs/testdox.txt"/>
    </logging>

</phpunit>
